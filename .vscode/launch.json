{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": ".NET Core Launch Array Sorter",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Ozow/src/StringSorter/bin/Debug/netcoreapp3.1/StringSorter.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Ozow/src/StringSorter",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch Conway",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildConway",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Ozow/src/Conway/bin/Debug/netcoreapp3.1/Conway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Ozow/src/Conway",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}